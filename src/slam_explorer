#! /usr/bin/env python

import rospy
from nav_msgs.msg import OccupancyGrid


class TurtleBotSlamExplorer:

    def __init__(self):

        pass

    def get_map(self):

        while not rospy.is_shutdown():

            map_data = rospy.wait_for_message('/map', OccupancyGrid)

        return map_data


def main():
    rospy.init_node('slam_explorer_n')
    slam_explr = TurtleBotSlamExplorer()
    print(slam_explr.get_map())


if __name__ == '__main__':
    try:
        main()
    except rospy.ROSInterruptException:
        pass


